<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.co.horveno.volleysport.Detail"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_nama_detail"
                android:textSize="30dp"
                android:text="Hafizh Naufal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/view_detail"
                android:layout_below="@+id/text_nama_detail"
                android:background="@android:color/darker_gray"/>
            <!--Place-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/marker"
                    android:id="@+id/marker_detail"
                    android:layout_below="@+id/view_detail"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matraman, Jakarta Timur"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/marker_detail"
                    android:layout_toEndOf="@+id/marker_detail"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text_alamat_detail" />
            </LinearLayout>
            <!--Birth of Date-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/birthdaycake"
                    android:id="@+id/birth_detail"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta, 14 Mei 2001"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/birth_detail"
                    android:layout_toEndOf="@+id/birth_detail"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text_ttl_detail" />
            </LinearLayout>
            <!--Blog-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/browser"
                    android:id="@+id/blog_detail"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="greensystem1405.blogspot.co.id"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/blog_detail"
                    android:layout_toEndOf="@+id/blog_detail"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text_blog_detail" />
            </LinearLayout>
            <!--Gmail-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/gmail"
                    android:id="@+id/email_detail"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hfiizh1405@gmail.com"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/email_detail"
                    android:layout_toEndOf="@+id/email_detail"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text_gmail_detail" />
            </LinearLayout>
            <!--Facebook-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/facebook"
                    android:id="@+id/fb_detail"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hafizh Naufal"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/fb_detail"
                    android:layout_toEndOf="@+id/fb_detail"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/text_fb_detail" />
            </LinearLayout>
        </LinearLayout>




</android.support.v4.widget.NestedScrollView>
